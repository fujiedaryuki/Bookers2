<main>
  <p id="notice">
    <%= notice %>
  </p>
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h1>Editing Book</h1>
        <%= render 'shared/error', errors: @book %>
        <%= form_with model:@book, local:true do |f| %>
          <div class='form-group'>
            <%= f.label :Title %><br/>
            <%= f.text_field :title %>
          </div>
          <div class='form-group'>
            <p>Opinion</p>
            <%= f.text_area :body %>
          </div>
          <div class='form-group'>
            <br><%= f.submit 'Update Book', class:'btn btn-success' %></br>
          </div>
        <% end %>
        <%= link_to "Show", book_path(@book) %>  |  <%= link_to "Back", books_path %>
      </div>
    </div>
  </div>
</main>

<main>
  <p id="notice">
    <%= notice %>
  </p>
  <div class='container px-5 px-sm-0'>
    <div class='row'>
      <div class='col-md-3'>
        <h2>User info</h2>
        <%= render 'users/info', user: @user %>
        <div class='row'>
          <h2 class="mt-3">New book</h2>
          <%= render 'books/new', book: Book.new %>
        </div>
      </div>
      <div class='col-md-8 offset-md-1'>
        <h2>Users</h2>
        <%= render 'users/table', users: @users %>
      </div>
    </div>
  </div>
</main>
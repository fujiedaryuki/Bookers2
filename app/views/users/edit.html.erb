<main>
  <div class='container'>
    <div class='row'>
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h2>User info</h2>
        <%= render 'shared/error', errors: @user %>
        <%= form_with model: @user, local:true do |f| %>
          <div class="form-group">
            <%= f.label :name, class:'control-label' %>
            <%= f.text_field :name, class:'form-control input-sm' %>
          </div>
          <div class="form-group">
            <%= f.label :profile_image, class:'control-label' %>
            <%= f.attachment_field :profile_image %>
          </div>
          <div class="form-group">
            <%= f.label :introduction, class:'control-label' %>
            <%= f.text_area :introduction, class:'form-control input-sm' %>
          </div>
          <div class="form-group">
           <%= f.submit class:'btn btn-secondary' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</main>